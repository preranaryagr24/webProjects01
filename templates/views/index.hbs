<!DOCTYPE html>
<html lang="en">

<head>
    {{>headerLink}}
</head>

<body>
    <div class="container-fluid main_menu">
        <div class="row">
            <div class="col-mid-8 col-10 mx-auto">
                {{>navbar}}
            </div>
        </div>
    </div>

    <!-- header -->
    <div class="container-fluid main_header">
        <div class="row">
            <div class="col-mid-8 col-10 mx-auto">
                <div class="row">
                    <!-- left side div -->
                    <div class="col-mid-10 col-6 main_header_left">
                        <p>Welcome to weather app</p>
                        <h1>Get The latest <span class="text_clr"> Weather </span> Info</h1>
                        <a href="/weather"><button>Click Now</button></a>
                    </div>
                    <!-- right side div -->
                    <div class="col-mid-10 col-6 main_header_right">
                        <div id="carouselExampleControls" clas s="carousel slide" data-ride="carousel">
                            <div class="carousel-inner">
                                <div class="carousel-item active">
                                    <img class="w-100" src="./images/bg1.jpg
                                    " alt="First slide">
                                </div>
                                <div class="carousel-item">
                                    <img class="w-100" src="./images/bg2.jpg
                                    " alt="Second slide">
                                </div>
                                <div class="carousel-item">
                                    <img class="w-100" src="./images/bg3.jpg
                                    " alt="Third slide">
                                </div>
                            </div>
                            <a class="carousel-control-prev" href="#carouselExampleControls" role="button"
                                data-slide="prev">
                                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                                <span class="sr-only">Previous</span>
                            </a>
                            <a class="carousel-control-next" href="#carouselExampleControls" role="button"
                                data-slide="next">
                                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                                <span class="sr-only">Next</span>
                            </a>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
    <!-- footer code  -->
    {{>footer}}
</body>

</html>